{
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 8
    },
    "globals": {
        "browser": false,
        "expect": false,
        "should": false,
        "$": false,
        "$$": false
      },
    "rules": {
      "indent": ["error", 2],
      "quotes": ["error", "single", { "allowTemplateLiterals": true }],
      "linebreak-style": ["error", "windows"],
      "semi": ["error", "always"],
      "object-curly-spacing": ["error", "always"]
    }
  }